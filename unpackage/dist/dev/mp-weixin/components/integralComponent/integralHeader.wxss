.integral-header {
  height: 500rpx;
  position: relative;
}
.integral-header .integral-header-bg {
  width: 100%;
  height: 100%;
}
.integral-header .integral-info {
  background-color: #fff;
  position: absolute;
  width: 255rpx;
  height: 255rpx;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.integral-header .integral-info .integral-info-border {
  -webkit-border-radius: 50%;
          border-radius: 50%;
  width: 230rpx;
  height: 230rpx;
  border: 2rpx solid #F22213;
}
.integral-header .integral-info .integral-info-border .my-integral {
  color: #F22213;
  font-size: 30rpx;
}
.integral-header .integral-info .integral-info-border .integral-num {
  color: #EF1302;
  font-size: 50rpx;
  font-weight: bold;
}
.integral-header .go-shop {
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 170rpx;
  height: 50rpx;
  padding: 0 10rpx;
  -webkit-border-top-right-radius: 25rpx;
          border-top-right-radius: 25rpx;
  -webkit-border-bottom-right-radius: 25rpx;
          border-bottom-right-radius: 25rpx;
  background-color: #fff;
  color: #F22213;
}
.integral-header .go-shop image {
  width: 50rpx;
  height: 50rpx;
}
.integral-header .integral-explain {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  color: #A99E8A;
}
.integral-header .integral-explain image {
  width: 30rpx;
  height: 30rpx;
}

