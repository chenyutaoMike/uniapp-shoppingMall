<view class="cart-list-box"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><block><view class="{{['cart-list flex justify-between',item.invalid?'invalid':'']}}"><view class="list-left "><view class="left-msg"><block wx:if="{{!item.invalid}}"><label><block wx:if="{{item.is_checked===1}}"><checkbox data-id="{{item.id}}" data-checkId="{{item.is_checked}}" data-event-opts="{{[['tap',[['choice',['$event']]]]]}}" bindtap="__e"></checkbox></block><block wx:if="{{item.is_checked===2}}"><checkbox checked="{{true}}" data-id="{{item.id}}" data-checkId="{{item.is_checked}}" data-event-opts="{{[['tap',[['choice',['$event']]]]]}}" bindtap="__e"></checkbox></block></label></block><block wx:else><text class="left-text">{{''+item.tips+''}}</text></block></view><image class="left-img _img" src="{{hostUrl+item.litpic}}" alt data-event-opts="{{[['tap',[['goDetails',['$0'],[[['cartList','id',item.id,'article_id']]]]]]]}}" catchtap="__e"></image></view><view class="list-right"><view class="list-detail"><view class="title text2-ellipsis">{{item.title}}</view><view class="specifications">{{"规格: "+item.property_value}}</view><view class="compute"><view class="decrease animated" hover-class="tada" data-event-opts="{{[['tap',[['decrease',['$0'],[[['cartList','id',item.id]]]]]]]}}" bindtap="__e">-</view><view class="num">{{item.quantity}}</view><view class="add animated " hover-class="tada" data-event-opts="{{[['tap',[['add',['$0'],[[['cartList','id',item.id]]]]]]]}}" bindtap="__e">+</view></view></view></view><view class="list-pic"><view class="list-new-pic">{{"￥"+item.price}}</view><view class="list-old-pic">{{"￥"+item.marketPrice}}</view><view data-event-opts="{{[['tap',[['delItem',['$0'],[[['cartList','id',item.id,'id']]]]]]]}}" class="list-del" bindtap="__e"><image class="deleteImg" src="{{deleteImg}}" mode></image></view></view></view></block></block></view>