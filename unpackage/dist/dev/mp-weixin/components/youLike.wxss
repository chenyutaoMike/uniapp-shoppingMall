.like {
  background-color: #f5f5f5;
  width: 100%;
}
.like .like-title {
  width: 100%;
  height: 140rpx;
  text-align: center;
  line-height: 140rpx;
  background-color: #f5f5f5;
}
.like .like-list {
  width: 95%;
  margin: 0 auto;
  padding-bottom: 10rpx;
}
.like .like-list .like-item {
  background-color: #fff;
  position: relative;
  width: 49%;
  margin-bottom: 20rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
}
.like .like-list .like-item:nth-child(2n) {
  margin-right: 0;
}
.like .like-list .like-item .like-img {
  height: 345rpx;
  width: 100%;
}
.like .like-list .like-item .item-name {
  height: 100rpx;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.like .like-list .like-item .like-pic {
  padding: 10rpx 10rpx;
}
.like .like-list .like-item .like-pic .new-pic {
  font-size: 32rpx;
  color: #ff005a;
}
.like .like-list .like-item .like-pic .old-pic {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #2d2d2d;
  text-decoration: line-through;
}
.like .like-list .like-item .like-cart {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

