.good-list {
  width: 95%;
  margin: 0 auto 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.good-list .good-title {
  height: 80rpx;
  background-color: #92012a;
  padding: 0 26rpx;
  -webkit-border-top-left-radius: 10rpx;
          border-top-left-radius: 10rpx;
  -webkit-border-top-right-radius: 10rpx;
          border-top-right-radius: 10rpx;
  color: #fff;
}
.good-list .good-title .title {
  font-size: 32rpx;
}
.good-list .good-title .more {
  border: 1rpx solid #fff;
  width: 120rpx;
  height: 50rpx;
  font-size: 26rpx;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  line-height: 50rpx;
}
.good-list .good-center {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.good-list .good-center .center-img {
  width: 100%;
  height: 100%;
}
.good-list .good-center .center-title {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #fff;
}
.good-list .list {
  width: 100%;
  margin-top: 16rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.good-list .list .list-item {
  width: 32%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
}
.good-list .list .list-item .list-img {
  width: 100%;
  height: 225rpx;
}
.good-list .list .list-item .list-name {
  color: #464646;
  padding: 0 5rpx;
  margin-top: 10rpx;
  height: 80rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.good-list .list .list-item .list-pic {
  padding: 0 10rpx;
  margin-top: 10rpx;
}
.good-list .list .list-item .list-pic .new-pic {
  color: #ff005a;
  font-size: 30rpx;
}
.good-list .list .list-item .list-pic .old-pic {
  color: #2d2d2d;
  font-size: 24rpx;
  text-decoration: line-through;
}

