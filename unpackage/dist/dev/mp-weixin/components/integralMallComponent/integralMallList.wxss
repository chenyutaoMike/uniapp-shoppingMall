.shop-list-box {
  padding: 20rpx 10rpx;
}
.shop-list-box .shop-list-item {
  width: 49%;
  background-color: #fff;
  margin-bottom: 20rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
  -webkit-box-shadow: 0 0 3px 3px #ccc;
          box-shadow: 0 0 3px 3px #ccc;
}
.shop-list-box .shop-list-item .shop-list-img {
  width: 100%;
  height: 360rpx;
}
.shop-list-box .shop-list-item .shop-list-img image {
  width: 100%;
  height: 100%;
}
.shop-list-box .shop-list-item .item-content {
  padding: 5rpx 15rpx;
}
.shop-list-box .shop-list-item .item-content .item-title {
  display: block;
  height: 90rpx;
  max-width: 320rpx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-list-box .shop-list-item .item-content .item-bottom .item-new-pic {
  font-size: 30rpx;
  color: #DF0C1D;
}
.shop-list-box .shop-list-item .item-content .item-bottom .item-old-pic {
  font-size: 26rpx;
  text-decoration: line-through;
  color: #585858;
}
.shop-list-box .shop-list-item .item-content .item-bottom .item-shop-cart {
  width: 100rpx;
  height: 100rpx;
}
.shop-list-box .shop-list-item .item-content .item-bottom .item-shop-cart image {
  width: 100%;
  height: 100%;
}

