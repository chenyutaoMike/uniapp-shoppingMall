.detail-popup {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.detail-popup .detail-popup-desc {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.detail-popup .detail-popup-desc .detail-popup-box {
  padding: 0 15rpx;
}
.detail-popup .detail-popup-desc .detail-popup-box .detail-popup-top {
  position: relative;
  height: 190rpx;
  border-bottom: 1rpx solid #C3C3C3;
}
