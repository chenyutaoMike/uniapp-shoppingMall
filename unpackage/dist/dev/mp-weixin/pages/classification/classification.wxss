  top: 89rpx;
  right: 0;
  width: 570rpx;
  height: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.classification .tui-city-scroll-y {
  height: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.classification .tui-list-head {
  margin-left: 20rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
}
.classification .tui-list-li {
  padding: 20rpx 0 0 0;
  margin: 0 20rpx 20rpx 20rpx;
  background: #fff;
  overflow: hidden;
  color: #fff;
  font-size: 50rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  /* box-shadow: 1px 3px 5px 5px #ececec; */
