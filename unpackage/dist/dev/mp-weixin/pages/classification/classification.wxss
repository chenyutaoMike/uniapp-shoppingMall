.classification .top {
  height: 80rpx;
  background-color: #fff;
  padding: 10rpx 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.classification .top .classification-input {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #ededed;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  padding-left: 30rpx;
}
.classification .classificationpage {
  margin-top: 30rpx;
}
.classification .tui-fixed-x {
  position: fixed;
  top: 0rpx;
  left: 0;
}
.classification .tui-fixed-left {
  width: 180rpx;
  height: 100%;
  position: fixed;
  background-color: #F0F0F0;
  top: 90rpx;
  left: 0;
}
.classification .tui-list-head {
  height: 65rpx;
  line-height: 65rpx;
}
.classification .tui-city-scroll {
  width: 100%;
}
.classification .menu-item {
  display: block;
  position: relative;
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  /* border-bottom: 1px solid #dfdfdf; */
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #F0F0F0;
  z-index: 10;
  text-align: center;
  -webkit-transition: 0.8s;
  transition: 0.8s;
  color: #757575;
}
.classification .menu-active {
  background-color: #FFFFFF;
  color: #FF0047;
}
.classification .menu-active::after {
  content: '';
  display: block;
  width: 30rpx;
  height: 50rpx;
  background-color: #e73a6a;
  position: relative;
  left: 0;
  bottom: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  -webkit-border-top-right-radius: 25%;
          border-top-right-radius: 25%;
  -webkit-border-bottom-right-radius: 25%;
          border-bottom-right-radius: 25%;
}
.classification .content {
  /* padding: 0 20rpx; */
