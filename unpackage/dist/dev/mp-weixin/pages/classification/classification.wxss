          box-shadow: 1px 3px 5px 3px #ccc;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
}
.classification .goods-box {
  margin-right: 10rpx;
  float: left;
  width: 170rpx;
  overflow: hidden;
}
.classification .tui-list-li .goods-box:nth-child(3n) {
  margin-right: 0rpx;
}
.classification .goodsImg {
  margin-bottom: 15rpx;
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.classification .goodsName {
  margin-bottom: 20rpx;
